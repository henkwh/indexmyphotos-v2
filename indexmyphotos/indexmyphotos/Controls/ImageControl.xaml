<UserControl x:Class="indexmyphotos.Controls.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:indexmyphotos.Controls"
             xmlns:viewModel="clr-namespace:indexmyphotos.Controls.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModel:ImageControlVM, IsDesignTimeCreatable=False}">
    <Grid>
        <Image Source="{Binding ImagePath}">
        </Image>
    </Grid>
</UserControl>
